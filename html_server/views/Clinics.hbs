<!-- Insert Section -->
<!-- Able to add new Clinic to the database -->
<div id="insert" class="form-section">
    <form method="post" id="addClinicForm">
        <fieldset>
            <legend><strong>Add Clinic</strong></legend>
            <table>
                <th>Enter New Clinic Information Below:</th>
                <tr>
                    <td><label for="address">Address:   </label><input type="text" id="address" name="address" required></td>
                </tr>
                <tr>
                    <td><label for="email">Email:   </label><input type="email" id="email" name="email"></td>
                </tr>
                <tr>
                    <td><label for="phone">Phone Number:    </label><input type="tel" id="phone" name="phone"></td>
                </tr>
            </table>
            <div>
                <input type="submit" value="Add Clinic">
                <input type="button" value="Cancel" onclick="browseClinics()">
            </div>
        </fieldset>
    </form>
</div>

<!-- Update Section -->
<!-- Alter information on current list of Clinics -->
<div id="update" class="form-section">
    <form method="post" id="updateClinicForm">
        <fieldset>
            <legend><strong>Update Clinic</strong></legend>
            <table>
                <th>Update Clinic Information Below:</th>
                <tr>
                    <td><label for="updateClinicID">Clinic ID:  </label><input type="text" id="updateClinicID" name="clinicID" readonly></td>
                </tr>
                <tr>
                    <td><label for="updateAddress">Address: </label><input type="text" id="updateAddress" name="address" required></td>
                </tr>
                <tr>
                    <td><label for="updateEmail">Email: </label><input type="email" id="updateEmail" name="email"></td>
                </tr>
                <tr>
                    <td><label for="updatePhone">Phone Number:  </label><input type="tel" id="updatePhone" name="phone"></td>
                </tr>
            </table>
            <div>
                <input type="submit" value="Save Changes">
                <input type="button" value="Cancel" onclick="browseClinics()">
            </div>
        </fieldset>
    </form>
</div>

<!-- Delete Section -->
<!-- Able to delete a Clinic from the table -->
<div id="delete" class="form-section">
    <form method="post" id="deleteClinicForm">
        <fieldset>
            <legend><strong>Delete Clinic</strong></legend>
            <p>Are you sure you want to delete this clinic?</p>
            <table>
                <th>Confirm Clinic Information Below:</th>
                <tr>
                    <td><strong><label for="deleteClinicID">Clinic ID:</label></strong><span id="deleteClinicID"></span></td>
                </tr>
                <tr>
                    <td><strong><label for="deleteClinicAddress">Address:</label></strong><span id="deleteClinicAddress"></span></td>
