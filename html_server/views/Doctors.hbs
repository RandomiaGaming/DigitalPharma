<!-- Insert Section -->
<div id="insert" class="form-section">
    <form method="post" id="addDoctorForm">
        <fieldset>
            <legend><strong>Add Doctor</strong></legend>
            <table>
                <th>Enter New Doctor Information:</th>
                <tr>
                    <td><label for="firstName">First Name:  </label><input type="text" id="firstName" name="firstName" required></td>
                </tr>
                <tr>
                    <td><label for="lastName">Last Name:    </label><input type="text" id="lastName" name="lastName" required></td>
                </tr>
                <tr>
                    <td><label for="email">Email:   </label><input type="email" id="email" name="email"></td>
                </tr>
                <tr>
                    <td><label for="phone">Phone Number:    </label><input type="tel" id="phone" name="phone" required></td>
                </tr>
                <tr>
                    <td><label for="clinicID">Clinic:    </label><select name="clinicId" id="clinicID">
                        <option value="1">101 Health Ave Springfield IL</option>
                        <option value="2">202 Wellness Blvd Springfield IL</option>
                        <option value="3">303 Care St Springfield IL</option>
                        <option value="4">404 Healing Rd Springfield IL</option>
                        <option value="5">505 Recovery Ln Springfield IL</option>
                    </select></td>
                </tr>
            </table>
            <div>
                <input type="submit" value="Add Doctor">
                <input type="button" value="Cancel" onclick="browseDoctors()">
            </div>
        </fieldset>
    </form>
</div>

