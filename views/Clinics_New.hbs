<h2 class="page-title-text">Add Clinic</h2>
<br />
<form id="clinic-new-form">
    <fieldset>
        <legend><strong>Create Clinic</strong></legend>
        <table>
            <th>Insert Clinic Information Below:</th>
            <tr>
                <td><label for="clinicAddress">Clinic Address: </label> <input type="text" name="address"></td>
            </tr>
            <tr>
                <td><label for="clinicEmail">Clinic Email: </label> <input type="text" name="email"></td>
            </tr>
            <tr>
                <td><label for="clinicPhone">Clinic Phone Number: </label> <input type="tel" name="phoneNumber"></td>
            </tr>
        </table>
        <div>
            <input type="submit" value="Create Clinic">
            <input type="button" value="Cancel" onclick="window.location = '/Clinics'">
        </div>
    </fieldset>
</form>
<script>
document.getElementById('clinic-new-form').addEventListener('submit', function (event) {
    event.preventDefault();
    const formData = new FormData(event.target);
    const data = Object.fromEntries(formData.entries());
    API_AddClinic(data.firstName, data.lastName, data.dateOfBirth, data.email, data.phoneNumber, data.address);
    window.location = "/Patients";
});
</script>