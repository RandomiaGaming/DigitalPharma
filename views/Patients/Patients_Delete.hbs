<br />
<h2 class="page-title-text">{{title}}</h2>
<br />
<h3>Are you sure you want to delete this {{tableNameSingular}}?</h3>
<br />
<table>
    <tr>
        <th>Patient ID</th>
        <th>Name</th>
        <th>Date Of Birth</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Address</th>
    </tr>
    <tr>
        <td>{{result.patientID}}</td>
        <td>{{result.firstName}} {{lastName}}</td>
        <td>{{result.dateOfBirth}}</td>
        <td>{{result.email}}</td>
        <td>{{result.phoneNumber}}</td>
        <td>{{result.address}}</td>
    </tr>
</table>
<br />
<form id="form">
    <fieldset>
        <div>
            <input type="submit" value="Yes (Delete It)">
            <input type="button" value="No (Cancel)"
                onclick="window.location = window.location.origin + window.location.pathname.substring(0, window.location.pathname.lastIndexOf('/'))">
        </div>
    </fieldset>
</form>
<script>
    document.getElementById("form").addEventListener("submit", async (event) => {
        try {
            event.preventDefault();
            await API_RemovePatient("{{result.patientID}}");
            window.location = window.location.origin + window.location.pathname.substring(0, window.location.pathname.lastIndexOf('/'));
        } catch (err) {
            const errMsg = `ERROR: ${err.message || err}`;
            console.error(errMsg);
            alert(errMsg);
        }
    });
</script>