<!-- Insert Section -->
<div id="insert" class="form-section">
    <form method="post" id="addProductForm">
        <fieldset>
            <legend><strong>Add Product</strong></legend>
            <table>
                <th>Enter New Product Information Below:</th>
                <tr>
                    <td><label for="genericName">Generic Name:</label></td>
                    <td><input type="text" id="genericName" name="genericName" required></td>
                </tr>
                <tr>
                    <td><label for="brandName">Brand Name:</label></td>
                    <td><input type="text" id="brandName" name="brandName" required></td>
                </tr>
                <tr>
                    <td><label for="description">Description:</label></td>
                    <td><textarea id="description" name="description" required></textarea></td>
                </tr>
                <tr>
                    <td><label for="price">Price:</label></td>
                    <td><input type="number" id="price" name="price" step="0.01" required></td>
                </tr>
            </table>
            <div>
                <input type="submit" value="Add Product">
                <input type="button" value="Cancel" onclick="browseProducts()">
            </div>
        </fieldset>
    </form>
</div>

<!-- Update Section -->
<div id="update" class="form-section">
    <form method="post" id="updateProductForm">
        <fieldset>
            <legend><strong>Update Product</strong></legend>
            <table>
                <th>Update Product Information Below:</th>
                <tr>
                    <td><label for="updateProductID">Product ID:</label><input type="text" id="updateProductID" name="productID" readonly></td>
                </tr>
                <tr>
                    <td><label for="updateGenericName">Generic Name:</label><input type="text" id="updateGenericName" name="genericName" required></td>
                </tr>
                <tr>
                    <td><label for="updateBrandName">Brand Name:</label><input type="text" id="updateBrandName" name="brandName" required></td>
                </tr>
                <tr>
                    <td><label for="updateDescription">Description:</label><textarea id="updateDescription" name="description" required></textarea></td>
                </tr>
                <tr>
                    <td><label for="updatePrice">Price:</label><input type="number" id="updatePrice" name="price" step="0.01" required></td>
                </tr>
            </table>
            <div>
                <input type="submit" value="Save Changes">
                <input type="button" value="Cancel" onclick="browseProducts()">
            </div>
        </fieldset>
    </form>
</div>

<!-- Delete Section -->
<div id="delete" class="form-section">
    <form method="post" id="deleteProductForm">
        <fieldset>
            <legend><strong>Delete Product</strong></legend>
            <p>Are you sure you want to delete this product?</p>
            <table>
                <th>Confirm Product Information Below:</th>
                <tr>
                    <td><strong><label for="deleteProductID">Product ID:</label></strong></td>
                    <td><span id="deleteProductID"></span></td>
                </tr>
                <tr>
                    <td><strong><label for="deleteGenericName">Generic Name:</label></strong></td>
                    <td><span id="deleteGenericName"></span></td>
                </tr>
                <tr>
                    <td><strong><label for="deleteBrandName">Brand Name:</label></strong></td>
                    <td><span id="deleteBrandName"></span></td>
                </tr>
            </table>
            <div>
                <input type="submit" value="Confirm Delete">
                <input type="button" value="Cancel" onclick="browseProducts()">
            </div>
        </fieldset>
    </form>
</div>