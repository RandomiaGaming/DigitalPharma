<h2 class="page-title-text">Delete Patients</h2>
<br />
<h3>CONFIRM PATIENT DELETE</h3>

<form id="patient-delete-form">
        <fieldset>
        <p>Are you sure you want to delete this patient?</p>
        <table>
            <th>Confirm Patient Information:</th>
            <tr>
                <td>Patient ID: {{result.patientID}}</td>
            </tr>
            <tr>
                <td>Patient Name: {{result.firstName}} {{result.lastName}}</td>
            </tr>

        </table>
        <div>
            <input type="submit" value="Delete Patient">
            <input type="button" value="Cancel" onclick="window.location = '/Patients'">
        </div>
    </fieldset>
</form>
<script>
document.getElementById('patient-delete-form').addEventListener('submit', function (event) {
    event.preventDefault();
    const formData = new FromData(event.target);
    const data = Object.fromEntries(formData.entries());
    API_RemovePatient(data.patientID);
    //window.location = "/Patients";
});
</script>